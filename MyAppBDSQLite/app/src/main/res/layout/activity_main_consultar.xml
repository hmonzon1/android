<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityConsultar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar Mascotas"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editIdMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="25sp"
            android:hint="Ingrese el ID a buscar"
            />
        <Button
            android:id="@+id/btnConsultarMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#E30000"
            android:layout_margin="1sp"
            android:textSize="25sp"
            android:text="buscar"
            android:onClick="onClick"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/txtNombreC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--------------"
        android:layout_margin="25sp"
        android:textColor="@color/black"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/txtRazaC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--------------"
        android:layout_margin="25sp"
        android:textColor="@color/black"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/txtColorC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------"
        android:layout_margin="25sp"
        android:textColor="@color/black"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/txtEdadC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------"
        android:layout_margin="25sp"
        android:textColor="@color/black"
        android:textSize="25sp"
        />




</LinearLayout>