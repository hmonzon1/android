<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityEliminarSW">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Producto"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"
/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/EditBuscarID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="25sp"
            android:hint="Ingrese ID a  eliminar"
            />
        <Button
            android:id="@+id/btnEliminar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#009688"
            android:layout_margin="1sp"
            android:textSize="25sp"
            android:text="buscar"
            android:onClick="onClick"
            />

</LinearLayout>



<TextView
android:id="@+id/txtNombreE"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="--------------"
android:layout_margin="25sp"
android:textColor="@color/black"
android:textSize="25sp"
    />
<TextView
android:id="@+id/txtmarcaE"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="--------------"
android:layout_margin="25sp"
android:textColor="@color/black"
android:textSize="25sp"
    />

<TextView
android:id="@+id/txtcostoE"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="---------"
android:layout_margin="25sp"
android:textColor="@color/black"
android:textSize="25sp"
    />

<TextView
android:id="@+id/txtprecioE"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="---------"
android:layout_margin="25sp"
android:textColor="@color/black"
android:textSize="25sp"
    />

    <Button
        android:id="@+id/btnEliminar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:text="Eliminar"
        android:textSize="25sp"
        android:backgroundTint="#009688"
        android:onClick="onClick"
        />


</LinearLayout>